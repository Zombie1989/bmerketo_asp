@model LoginViewModel    


<section class="login-form">
    <div class="container">
        <div class="form-box">
            <div class="first-text">
                <p>Please Login To Your Account</p>
                <div></div>
            </div>
            <form method="post" id="login_form" novalidate >

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form">
                    <label asp-for="Email"></label><span><a asp-controller="Account" asp-action="NewAccount"> Dont have an Account yet?</a></span>
                    <input asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form">
                    <label asp-for="Password">Password*</label><span><a asp-controller="Account" asp-action="LostAccount">Forgot Your Password?</a></span>
                    <input asp-for="Password" >
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </label>
                </div>

                <button class="btn-theme">Submit</button>
            </form>
        </div>
    </div>
</section>