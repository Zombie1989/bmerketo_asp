@model ContactFormViewModel



<section class="contact-form">
    <div class="container">
        <div class="form-box">
            <div class="first-text">
                <p>Contact us</p>
                <div></div>
            </div>

            <form method="post" id="comment_form">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> 

                <div class="form name">
                    <label asp-for="Name">Your Name*</label>
                    <input asp-for="Name" type="text">
                </div>
                <div class="form email">
                    <label asp-for="Email">Your Email*</label>
                    <input asp-for="Email" type="email">
                </div>
                <div class="form phone">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel">
                </div>
                <div class="form company">
                    <label asp-for="Company">Company (optional)</label>
                    <input asp-for="Company" type="text">
                </div>
                <div class="form text">
                    <label asp-for="TextForm">Write Something</label>
                    <textarea asp-for="TextForm" row="4" required></textarea>
                </div>
                <div class="checkbox">
                    <input id="remember-me" type="checkbox">
                    <label for="remember-me">Save my name, email, and website in this browser for the next time I comment</label>
                </div>
                <button class="btn-theme">Submit</button>
            </form>

        </div>
    </div>
</section>